<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN"
   "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>
	<bean id="dataService"
		class="com.gmail.rretzbach.seriesguy.services.MarshallingDataService">
		<property name="marshaller" ref="xstreamMarshaller" />
		<property name="unmarshaller" ref="xstreamMarshaller" />
	</bean>

	<bean id="editSeriesDialog" class="com.gmail.rretzbach.seriesguy.screens.SeriesDialog"
		init-method="init">
		<property name="dataService" ref="dataService" />
	</bean>

	<bean id="editSearchEnginesDialog"
		class="com.gmail.rretzbach.seriesguy.screens.SearchEnginesDialog"
		init-method="init">
		<property name="dataService" ref="dataService" />
	</bean>

	<bean id="queryResultDialog" class="com.gmail.rretzbach.seriesguy.screens.ResultDialog"
		init-method="init">
		<property name="dataService" ref="dataService" />
	</bean>

	<bean id="mainFrame" class="com.gmail.rretzbach.seriesguy.MainFrame"
		init-method="init">
		<property name="dataService" ref="dataService" />
		<property name="editSeriesDialog" ref="editSeriesDialog" />
		<property name="editSearchEnginesDialog" ref="editSearchEnginesDialog" />
		<property name="queryResultDialog" ref="queryResultDialog" />
	</bean>

	<bean id="xstreamMarshaller" class="org.springframework.oxm.xstream.XStreamMarshaller">
		<property name="annotatedClasses">
			<list>
				<value>com.gmail.rretzbach.seriesguy.model.Series</value>
				<value>com.gmail.rretzbach.seriesguy.model.SearchEngine</value>
				<value>com.gmail.rretzbach.seriesguy.services.SeriesDataset</value>
			</list>
		</property>
	</bean>
</beans>
